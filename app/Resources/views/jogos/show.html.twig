{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jogos</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jogo.id }}</td>
            </tr>
            <tr>
                <th>Nomedojogo</th>
                <td>{{ jogo.nomeDoJogo }}</td>
            </tr>
            <tr>
                <th>Duracao</th>
                <td>{{ jogo.duracao }}</td>
            </tr>
            <tr>
                <th>Idgenero</th>
                <td>{{ jogo.idGenero }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if jogo.createdAt %}{{ jogo.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if jogo.updatedAt %}{{ jogo.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Deletedat</th>
                <td>{% if jogo.deletedAt %}{{ jogo.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lojadegames_jogos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lojadegames_jogos_edit', { 'id': jogo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
